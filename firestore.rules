rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can only access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // User Approvals - authenticated users can read their own, admins can manage all
    match /userApprovals/{approvalId} {
      // Users can read their own approval record or all approvals (for admin page)
      // In production, you should add an admin check: request.auth.token.admin == true
      allow read: if isAuthenticated();
      // Allow all authenticated users to create their own approval (during registration)
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // For now, allow any authenticated user to approve/reject (you can add admin check later)
      // In production: allow update: if isAuthenticated() && request.auth.token.admin == true;
      allow update: if isAuthenticated();
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
